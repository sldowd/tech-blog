<ul class="post-list">
  {{#each posts as |post|}}
  <li>
    <article class="post">
      <div class="title">
        <h4>{{post.title}}</h4>
        <p>{{post.post_body}}</p>
      </div>
      <div class="meta">
        <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ul>